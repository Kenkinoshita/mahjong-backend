{
  "name": "mahjong-backend",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "prepare": "husky",
    "dev": "tsx watch src/server.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/index.js",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"**/*.{ts,js,json,md}\"",
    "check-type": "tsc --noEmit -p tsconfig.json",
    "test": "vitest"
  },
  "dependencies": {
    "@hono/node-server": "1.19.7",
    "better-sqlite3": "12.5.0",
    "hono": "4.11.0",
    "reflect-metadata": "0.2.2",
    "typeorm": "0.3.28"
  },
  "devDependencies": {
    "@types/node": "25.0.1",
    "eslint": "9.39.2",
    "eslint-config-prettier": "10.1.8",
    "husky": "9.1.7",
    "lint-staged": "16.2.7",
    "prettier": "3.7.4",
    "tsx": "4.21.0",
    "typescript": "5.9.3",
    "typescript-eslint": "8.49.0",
    "vitest": "4.0.15"
  },
  "engines": {
    "node": "24.12.0"
  }
}
